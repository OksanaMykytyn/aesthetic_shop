<section
  class="w-full mt-0"
  data-controller="slider"
>
  <div class="relative w-full h-[240px] overflow-hidden">

    <div class="absolute inset-0 flex transition-transform duration-500"
         data-slider-target="track">

      <%= image_tag "https://i.pinimg.com/1200x/1d/cb/af/1dcbaf81add2b0a8756d157a3f17afb5.jpg",
        class: "w-full h-full object-cover flex-shrink-0" %>

      <%= image_tag "https://i.pinimg.com/736x/dd/53/7a/dd537a0ed91a9add8022d5f0ea082e94.jpg",
        class: "w-full h-full object-cover flex-shrink-0" %>

      <%= image_tag "https://i.pinimg.com/736x/4e/82/10/4e8210f675c037f21dccf982f77f3250.jpg",
        class: "w-full h-full object-cover flex-shrink-0" %>
    </div>

    <div class="container absolute inset-0 flex items-center justify-between">

      <button
        class="slider-arrow"
        data-action="click->slider#prev"
      >
        <i class="fa-solid fa-chevron-left"></i>
      </button>

      <button
        class="slider-arrow"
        data-action="click->slider#next"
      >
        <i class="fa-solid fa-chevron-right"></i>
      </button>
    </div>

    <div class="absolute bottom-2 left-1/2 -translate-x-1/2 flex gap-2">
      <button class="slider-dot"
              data-action="click->slider#go"
              data-index="0"
              data-slider-target="dot"></button>

      <button class="slider-dot"
              data-action="click->slider#go"
              data-index="1"
              data-slider-target="dot"></button>

      <button class="slider-dot"
              data-action="click->slider#go"
              data-index="2"
              data-slider-target="dot"></button>
    </div>
  </div>
</section>
<section class="py-12">
  <div class="container">

    <h2 class="text-center text-xl mb-8">
      Популярні категорії
    </h2>

    <div
      class="grid gap-6 justify-center
             grid-cols-1
             sm:grid-cols-2
             lg:grid-cols-4"
    >
      <% @popular_categories.each do |category| %>
  <%= render "categories/card", category: category %>
<% end %>

    </div>

  </div>
</section>
<section>
  <div class="container">

    <h2 class="text-center text-xl mb-8">
      Популярні товари
    </h2>

    <div
      class="grid gap-6 justify-center
             grid-cols-1
             sm:grid-cols-2
             lg:grid-cols-4"
    >
      <% @popular_products.each do |product| %>
  <%= render "products/card", product: product %>
<% end %>

    </div>

    <div class="flex justify-center mt-10">
      <%= link_to "Переглянути весь каталог",
    catalog_path,
    class: "primary-button" %>

    </div>

  </div>
</section>
<section class="py-12">
  <div class="container">

    <h2 class="text-center text-xl mb-8">
      Популярні колекції
    </h2>

    <div
      class="grid gap-6 justify-center
             grid-cols-1
             sm:grid-cols-2
             lg:grid-cols-4"
    >
      <% @popular_collections.each do |collection| %>
  <%= render "collections/card", collection: collection %>
<% end %>

    </div>

  </div>
</section>
