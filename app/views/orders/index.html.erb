<section class="py-12">
  <div class="container max-w-4xl">

    <h1 class="text-xl mb-6">Мої замовлення</h1>

    <% if @orders.any? %>
      <div class="space-y-4">

        <% @orders.each do |order| %>
          <div class="border p-4 rounded flex justify-between items-center">

            <div>
              <p class="text-sm font-medium">
                Замовлення № <%= order.number %>
              </p>

              <p class="text-xs text-gray-500">
                <%= l(order.created_at, format: :long) %>
              </p>
            </div>

            <div class="text-right">
              <p class="text-sm mb-1">
                Статус:
                <span class="font-medium">
                  <%= order.status.humanize %>
                </span>
              </p>

              <p class="text-sm">
                Сума:
                <%= number_to_currency(order.total_cents / 100.0, unit: "₴") %>
              </p>

              <%= link_to "Переглянути",
                  order_path(order),
                  class: "text-xs text-blue-600 inline-block mt-2" %>
            </div>

          </div>
        <% end %>

      </div>
    <% else %>
      <p class="text-sm text-gray-500">
        У вас ще немає замовлень.
      </p>
    <% end %>

  </div>
</section>
