<section class="py-12">
  <div class="container max-w-4xl">

    <h1 class="text-xl mb-8 uppercase tracking-wide">
      Мої замовлення
    </h1>

    <% if @orders.any? %>
      <div class="space-y-4">

        <% @orders.each do |order| %>
          <div class="border border-black p-4 flex justify-between items-center">

            <div>
              <p class="text-sm font-medium">
                Замовлення № <%= order.number %>
              </p>

            </div>

            <div class="text-right text-sm">
              <p class="mb-1">
                Статус:
                <span class="font-medium">
                  <%= order.human_status %>
                </span>
              </p>

              <p>
                Сума:
                <%= number_to_currency(order.total_cents / 100.0, unit: "₴") %>
              </p>

              <%= link_to "Переглянути →",
                    order_path(order),
                    class: "block mt-2 text-xs uppercase tracking-wide hover:underline" %>
            </div>

          </div>
        <% end %>

      </div>
    <% else %>
      <p class="text-sm text-gray-500">
        У вас ще немає замовлень.
      </p>
    <% end %>

  </div>
</section>
