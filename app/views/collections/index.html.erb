<section class="py-12">
  <div class="container">

    <h1 class="text-center text-xl mb-10">
      Усі колекції
    </h1>

    <div
      class="grid gap-6 justify-center
             grid-cols-1
             sm:grid-cols-2
             lg:grid-cols-4"
    >
      <% @collections.each do |collection| %>
        <div class="category-card">

          <div class="aspect-square w-full mb-4 overflow-hidden">
            <% if collection.photo.attached? %>
              <%= image_tag collection.photo,
                class: "w-full h-full object-cover" %>
            <% else %>
              <div class="w-full h-full bg-gray-100"></div>
            <% end %>
          </div>

          <h3 class="text-sm mb-4 text-center">
            <%= collection.name %>
          </h3>

          <%= link_to "Перейти",
    collection_path(collection),
    class: "primary-button w-full text-center" %>

        </div>
      <% end %>
    </div>

  </div>
</section>
