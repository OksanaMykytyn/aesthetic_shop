<%# _paginator.html.erb %>
<%# 'paginator' передається автоматично %>

<nav class="pagination flex items-center gap-2">
  <% if paginator.prev_page %>
    <%= link_to url_for(page: paginator.prev_page), class: "pagination-link" do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
  <% end %>

  <% paginator.each_page do |page| %>
    <% if page == current_page %>
      <span class="pagination-current"><%= page %></span>
    <% else %>
      <%= link_to page, url_for(page: page), class: "pagination-link" %>
    <% end %>
  <% end %>

  <% if paginator.next_page %>
    <%= link_to url_for(page: paginator.next_page), class: "pagination-link" do %>
      <i class="fa-solid fa-chevron-right"></i>
    <% end %>
  <% end %>
</nav>
